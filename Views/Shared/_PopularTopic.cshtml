@using Neksara.ViewModels
@{
    var topics = ViewBag.PopularTopics as List<TopicCardVM>;
    int pageSize = 4;
}

<section id="recent-blog-postst" class="recent-blog-postst section light-background" style="background-color:#9fbec2;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3 d-flex" data-aos="fade-right">
                <div class="section-title topic-title-wrapper">
                    <h2 class="topic-title" style="margin-bottom: 15px;">
                        <span class="title-main">Topik</span>
                        <span class="title-accent">Paling Populer</span>
                    </h2>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="topics-wrapper">
                    @if (topics != null && topics.Any())
                    {
                        <div class="row gx-4 gy-4">
                            @for (int i = 0; i < Math.Min(pageSize, topics.Count); i++)
                            {
                                var t = topics[i];
                                <div class="col-xl-3 col-lg-4 col-md-6 popular-topic-item" data-index="@i">
                                    <div class="card h-100 shadow-sm">
                                        <img src="@t.TopicPicture" class="card-img-top" alt="@t.TopicName" style="height:180px; object-fit:cover;" />
                                        <div class="card-body">
                                            <span class="badge bg-secondary mb-2">@t.CategoryName</span>
                                            <h6 class="fw-bold mt-2">@t.TopicName</h6>
                                            <p class="mb-1">
                                                <strong>@t.Rating.ToString("0.0")</strong> / 5
                                                <span class="text-warning ms-1">
                                                    @for (int s = 1; s <= 5; s++) { if (s <= Math.Floor(t.Rating)) { <text>‚òÖ</text> } else { <text>‚òÜ</text> } }
                                                </span>
                                                <small class="text-muted">(@t.ReviewCount)</small>
                                            </p>
                                            <small class="text-muted">üëÅ @t.ViewCount Views</small>
                                        </div>
                                        <div class="card-footer bg-white border-0">
                                            <a href="/Learning/Detail/@t.TopicId" class="btn btn-sm btn-primary w-100">üìñ Lihat Materi</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Belum ada topik populer.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
