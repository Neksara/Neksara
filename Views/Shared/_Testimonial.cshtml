@model List<Neksara.Models.Testimoni>

<section class="py-5 testimoni-modern">
    <div class="container">

        <!-- HEADER -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h3 class="fw-bold">
                    <span class="text-primary">Testimoni</span>
                </h3>
                <p class="text-muted mb-0">
                    Testimoni dari user setelah menggunakan website ini
                </p>
            </div>

            <button class="btn btn-outline-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#testimoniModal">
                + Testimoni
            </button>
        </div>

        <!-- CAROUSEL -->
        <div id="testimonialCarousel"
             class="carousel slide"
             data-bs-interval="false">

            <!-- WRAPPER -->
            <div class="carousel-inner">
                @{
                    var totalSlide = (int)Math.Ceiling(Model.Count / 3.0);
                }

                @for (int i = 0; i < totalSlide; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row g-4">

                            @foreach (var item in Model.Skip(i * 3).Take(3))
                            {
                                <div class="col-md-4">
                                    <div class="testimonial-card h-100">

                                        <!-- HEADER -->
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="testimonial-avatar">
                                                    @item.TestimoniName.Substring(0, 1)
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">
                                                        @item.TestimoniName
                                                    </div>
                                                    <small class="text-muted">
                                                        @item.TestimoniRole
                                                    </small>
                                                </div>
                                            </div>

                                            <!-- RATING -->
                                            <div class="text-warning">
                                                @for (int r = 1; r <= 5; r++)
                                                {
                                                    @(r <= item.TestimoniRating ? "★" : "☆")
                                                }
                                            </div>
                                        </div>

                                        <!-- CONTENT -->
                                        <p class="text-muted mb-0">
                                            @item.Description
                                        </p>

                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                }
            </div>

            <!-- ARROWS -->
            <button class="carousel-control-prev"
                    type="button"
                    data-bs-target="#testimonialCarousel"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>

            <button class="carousel-control-next"
                    type="button"
                    data-bs-target="#testimonialCarousel"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>

            <!-- PAGINATION -->
            <div class="carousel-indicators position-relative mt-4">
                @for (int i = 0; i < totalSlide; i++)
                {
                    <button type="button"
                            data-bs-target="#testimonialCarousel"
                            data-bs-slide-to="@i"
                            class="@(i == 0 ? "active" : "")">
                    </button>
                }
            </div>

        </div>
    </div>
</section>

<!-- MODAL TAMBAH TESTIMONI -->
<div class="modal fade" id="testimoniModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Testimoni"
                  asp-action="Create"
                  method="post">

                <div class="modal-header">
                    <h5 class="modal-title">Tambah Testimoni</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input name="TestimoniName"
                           class="form-control mb-2"
                           placeholder="Nama"
                           required />

                    <input name="TestimoniRole"
                           class="form-control mb-2"
                           placeholder="Pekerjaan" />

                    <div class="mb-2">
                        <label>Rating</label>
                        <select name="TestimoniRating" class="form-control">
                            @for (int i = 5; i >= 1; i--)
                            {
                                <option value="@i">@i ⭐</option>
                            }
                        </select>
                    </div>

                    <textarea name="Description"
                              class="form-control"
                              placeholder="Komentar"
                              required></textarea>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-primary">Simpan</button>
                </div>
                
            </form>
        </div>
    </div>
</div>

<!-- ================= STYLE ================= -->
<style>
    .testimonial-card {
        background: #fff;
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,.08);
    }

    .testimonial-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: linear-gradient(135deg,#4f46e5,#3b82f6);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 18px;
        color: #fff;
        text-transform: uppercase;
        flex-shrink: 0;
    }

    #testimonialCarousel {
        position: relative;
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 44px;
        height: 44px;
        top: 50%;
        transform: translateY(-50%);
        background: rgb(253, 251, 251);
        border-radius: 50%;
        opacity: 1;
    }

    .carousel-control-prev {
        left: -22px;
    }

    .carousel-control-next {
        right: -22px;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: invert(1);
    }

    .carousel-indicators [data-bs-target] {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: #3f7f85;
    }
</style>