@model Neksara.ViewModels.CategoryListVM
@{
    ViewData["Title"] = "Kategori E-Learning";
    int? selectedId = ViewBag.SelectedCategoryId as int?;
}

<div class="container-fluid content-padding" style="padding-top: 120px;">
    <div class="container">
        <h2 class="fw-bold mb-4">ðŸ“‚ Kategori E-Learning</h2>

        <!-- ================= FILTER BAR ================= -->
        <div class="row mb-4 align-items-end position-relative" style="z-index: 10;">
            <div class="col-lg-3 col-md-4 col-sm-6 mb-2 mb-md-0">
                <select class="form-select" onchange="location = this.value">
                    <option value="/Learning/CategoryIndex">ðŸ”½ Semua Kategori</option>
                    @foreach (var c in Model.Categories)
                    {
                        if (selectedId == c.CategoryId)
                        {
                            <option value="/Learning/CategoryIndex?categoryId=@c.CategoryId" selected>@c.CategoryName</option>
                        }
                        else
                        {
                            <option value="/Learning/CategoryIndex?categoryId=@c.CategoryId">@c.CategoryName</option>
                        }
                    }
                </select>
            </div>

            @if (selectedId == null)
            {
                <div class="col-lg-6 col-md-5 mb-2 mb-md-0">
                    <input type="text" id="searchInput" class="form-control" placeholder="ðŸ” Cari kategori..." />
                </div>
                <div class="col-lg-3 col-md-3">
                    <select id="sortSelect" class="form-select">
                        <option value="az">A - Z</option>
                        <option value="za">Z - A</option>
                    </select>
                </div>
            }
        </div>

        <!-- ================= CARD GRID ================= -->
        <div class="row g-3" id="categoryGrid">
            @foreach (var c in Model.Categories)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 category-item" data-name="@c.CategoryName" data-description="@(c.Description ?? String.Empty)">
                    <div class="card h-100 border-0 shadow-sm hover-lift" style="transition: transform 0.2s, box-shadow 0.2s;">
                        <img src="@c.CategoryPicture" class="card-img-top rounded-top" alt="@c.CategoryName" style="height:140px; object-fit:cover; object-position:top center;" />
                        
                        <div class="card-body p-3 d-flex flex-column">
                            <div>
                                <h6 class="fw-bold text-dark mb-2 text-truncate" title="@c.CategoryName">@c.CategoryName</h6>
                                <p class="text-muted small mb-3" style="font-size: 0.8rem; line-height: 1.4;">
                                    @(string.IsNullOrEmpty(c.Description) ? "-" : (c.Description.Length > 80 ? c.Description.Substring(0, 80) + "..." : c.Description))
                                </p>
                            </div>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="badge bg-light text-primary border border-primary">ðŸ“˜ @c.TotalTopics Topik</span>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0 p-2 text-center">
                            <a href="/Learning/Topics?categoryId=@c.CategoryId" class="btn btn-primary w-100 btn-sm rounded-pill py-1 fw-bold" style="font-size: 0.85rem;">
                                Lihat Topik â†’
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- ================= PAGINATION ================= -->
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="/Learning/CategoryIndex?page=@i&categoryId=@Model.SelectedCategoryId">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }

        <!-- No results message (hidden by default) -->
        <div id="noResults" class="row" style="display: none;">
            <div class="col-12 text-center py-5">
                <div class="alert alert-light border" role="alert">
                    <i class="bi bi-search fs-1 text-muted mb-3"></i>
                    <h4 class="alert-heading">Kategori tidak ditemukan</h4>
                    <p>Maaf, tidak ada kategori yang sesuai dengan pencarian Anda. Coba kata kunci lain.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (selectedId == null)
{
    <!-- ================= SCRIPT ================= -->
    <script>
        (function() {
            const searchInput = document.getElementById('searchInput');
            const sortSelect = document.getElementById('sortSelect');
            const grid = document.getElementById('categoryGrid');
            const noResults = document.getElementById('noResults');

            function getItems() {
                return Array.from(document.querySelectorAll('.category-item'));
            }

            function renderList(list) {
                if (!grid) return;
                grid.innerHTML = '';
                list.forEach(i => grid.appendChild(i));
            }

            function updateNoResults(visibleCount) {
                if (!noResults) return;
                noResults.style.display = (visibleCount === 0) ? 'block' : 'none';
            }

            // Search (debounced)
            let searchTimeout;
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    clearTimeout(searchTimeout);
                    searchTimeout = setTimeout(() => {
                        const q = (searchInput.value || '').toLowerCase().trim();
                        const items = getItems();
                        let visible = 0;
                        items.forEach(item => {
                            const name = (item.getAttribute('data-name') || '').toLowerCase();
                            const desc = (item.getAttribute('data-description') || '').toLowerCase();
                            const match = q === '' || name.includes(q) || desc.includes(q);
                            item.style.display = match ? 'block' : 'none';
                            if (match) visible++;
                        });
                        updateNoResults(visible);
                    }, 200);
                });
            }

            // Sort
            if (sortSelect) {
                sortSelect.addEventListener('change', function() {
                    const items = getItems();
                    const visibleItems = items.filter(i => i.style.display !== 'none');
                    const sorted = visibleItems.sort((a, b) => {
                        const nameA = (a.getAttribute('data-name') || '').toLowerCase();
                        const nameB = (b.getAttribute('data-name') || '').toLowerCase();
                        return sortSelect.value === 'az' ? nameA.localeCompare(nameB) : nameB.localeCompare(nameA);
                    });
                    renderList(sorted);
                });
            }
        })();
    </script>
}
