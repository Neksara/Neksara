@model Neksara.Models.Topic
@{
    ViewData["Title"] = Model.TopicName;
    double rating = ViewBag.AvgRating ?? 0;
}

<a href="/Learning/Topics" class="btn btn-secondary mb-3">‚¨ÖÔ∏è Kembali</a>
<div class="card shadow">
    <div class="card-body">
        <img src="@Model.TopicPicture" class="card-img-top topic-header">

        <span class="badge bg-primary mb-2">
            @Model.Category?.CategoryName
        </span>

        <h3 class="mt-2">@Model.TopicName</h3>

        <!-- ‚≠ê RATING -->
        <p class="mb-1">
            <strong>@rating.ToString("0.0")</strong> / 5
            <span class="text-warning ms-2">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Math.Floor(rating))
                    {
                        <text>‚òÖ</text>
                    }
                    else
                    {
                        <text>‚òÜ</text>
                    }
                }
            </span>
        </p>
        
        <p class="text-muted mb-1">
            üëÅ @Model.ViewCount kali dilihat
        </p>

        <p class="text-muted mb-3">
            Date publish: @(Model.PublishedAt.HasValue ? Model.PublishedAt.Value.ToString("dd MMM yyyy") : "-")
        </p>
        <hr />

        @{
        string? embedUrl = null;

        if (!string.IsNullOrEmpty(Model.VideoUrl))
        {
            embedUrl = Model.VideoUrl
                .Replace("watch?v=", "embed/")
                .Replace("youtu.be/", "www.youtube.com/embed/");
        }
        }

        @if (embedUrl != null)
        {
            <div class="ratio ratio-16x9 mb-4">
                <iframe src="@embedUrl" allowfullscreen></iframe>
            </div>
        }

        <p style="white-space: pre-line;">
            @Model.Description
        </p>

        <!-- üí¨ BUTTON FEEDBACK -->
        <button class="btn btn-outline-primary mt-3"
                data-bs-toggle="modal"
                data-bs-target="#feedbackModal">
            üí¨ Beri Feedback
        </button>
    </div>
</div>

<!-- ================= MODAL FEEDBACK ================= -->
<div class="modal fade" id="feedbackModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <form method="post" action="/Feedback/Create">

                <div class="modal-header">
                    <h5 class="modal-title">Feedback Topik</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <!-- AUTO -->
                    <input type="hidden" name="TargetType" value="Topic" />
                    <input type="hidden" name="TargetId" value="@Model.TopicId" />

                    <div class="mb-2">
                        <label>Nama</label>
                        <input name="Name" class="form-control" required />
                    </div>

                    <div class="mb-2">
                        <label>Pekerjaan</label>
                        <input name="Role" class="form-control" required />
                    </div>

                    <div class="mb-2">
                        <label>Rating</label>
                        <select name="Rating" class="form-control">
                            @for (int i = 5; i >= 1; i--)
                            {
                                <option value="@i">@i ‚≠ê</option>
                            }
                        </select>
                    </div>

                    <div class="mb-2">
                        <label>Deskripsi</label>
                        <textarea name="Description" class="form-control" rows="3"></textarea>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Batal
                    </button>
                    <button class="btn btn-primary">
                        Simpan
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>
<!-- ================= END MODAL FEEDBACK ================= -->
<!-- FEEDBACK SECTION -->
<partial name="_FeedbackSection" model="ViewBag.Feedbacks" />
