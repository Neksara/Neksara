@using Neksara.Models
@model List<Testimoni>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Testimoni</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Pekerjaan</th>
            <th>Komentar</th>
            <th>Rating</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@(string.IsNullOrEmpty(t.TestimoniName) ? "Anon" : t.TestimoniName)</td>
            <td>@t.TestimoniRole</td>
            <td>@t.Description</td>

            <td class="text-warning">
                @for (int i = 1; i <= 5; i++)
                {
                    <text>@(i <= t.TestimoniRating ? "★" : "☆")</text>
                }
            </td>

            <td>
                @if (t.IsApproved)
                {
                    <span class="badge bg-success">Approved</span>
                }
                else
                {
                    <span class="badge bg-warning">Pending</span>
                }

                @if (!t.IsVisible)
                {
                    <span class="badge bg-danger ms-1">Hidden</span>
                }
            </td>

            <td>
                @* Approve button hanya untuk pending *@
                @if (!t.IsApproved)
                {
                    <form asp-action="Approve" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@t.TestimoniId" />
                        <button class="btn btn-sm btn-success">Approve</button>
                    </form>
                }

                @* Toggle visibility: hide/show *@
                <form asp-action="ToggleVisibility" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@t.TestimoniId" />
                    <button class="btn btn-sm @(t.IsVisible ? "btn-danger" : "btn-primary")">
                        @(t.IsVisible ? "Hide" : "Show")
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
