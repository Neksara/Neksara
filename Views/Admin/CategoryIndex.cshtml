@model List<Neksara.ViewModels.CategoryIndexVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="mb-3">Daftar Kategori</h4>

<!-- ================= SEARCH BAR SAKTI ================= -->
<div class="mb-3 d-flex flex-wrap gap-2 align-items-center">

    <!-- SEARCH -->
    <div class="col-12 col-md-5">
        <input type="text"
               id="searchInput"
               name="search"
               value="@ViewBag.Search"
               class="form-control"
               placeholder="ðŸ” Cari kategori..." />
    </div>

    <!-- SORT -->
    <select id="sortSelect" name="sort" class="form-select w-auto">
        <option value="">Default</option>
        <option value="az" selected="@(ViewBag.Sort == "az")">A - Z</option>
        <option value="za" selected="@(ViewBag.Sort == "za")">Z - A</option>
        <option value="views" selected="@(ViewBag.Sort == "views")">View Terbanyak</option>
        <option value="topics" selected="@(ViewBag.Sort == "topics")">Topik Terbanyak</option>
    </select>

    <a href="/Admin/CreateCategory"
       class="btn btn-success ms-auto">
        + Tambah Category
    </a>
</div>

<!-- ================= TABLE ================= -->
<table class="table table-bordered table-striped align-middle">
    <thead class="text-muted">
        <tr>
            <th>Kategori</th>
            <th>Topik</th>
            <th>Total Views</th>
            <th style="width:200px">Aksi</th>
        </tr>
    </thead>

    <tbody id="categoryTable">
@foreach (var c in Model)
{
        <tr class="category-row"
            data-name="@c.CategoryName.ToLower()"
            data-views="@c.TotalViews"
            data-topics="@c.TotalTopics">

            <td>@c.CategoryName</td>

            <td>
                <span class="badge bg-info">
                    @c.TotalTopics Topik
                </span>
            </td>

            <td>
                <span class="badge bg-warning text-dark">
                    @c.TotalViews Views
                </span>
            </td>

            <td class="d-flex gap-1">
                <a href="/Admin/CategoryDetail/@c.CategoryId"
                   class="btn btn-sm btn-primary">
                    Detail
                </a>

                <a href="/Admin/EditCategory/@c.CategoryId"
                   class="btn btn-sm btn-warning">
                    Edit
                </a>

                <form asp-controller="Admin"
                      asp-action="DeleteCategory"
                      asp-route-id="@c.CategoryId"
                      method="post"
                      class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-sm btn-danger"
                            onclick="return confirm('Yakin hapus kategori ini?')">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
</table>

@{
    var current = (int?)(ViewBag.CurrentPage ?? 1) ?? 1;
    var total = (int?)(ViewBag.TotalPages ?? 1) ?? 1;
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(current == 1 ? "disabled" : "")">
            <a class="page-link" href="?search=@ViewBag.Search&sort=@ViewBag.Sort&page=@(current-1)">Previous</a>
        </li>

        @for (int i = 1; i <= total; i++)
        {
            <li class="page-item @(i == current ? "active" : "")">
                <a class="page-link" href="?search=@ViewBag.Search&sort=@ViewBag.Sort&page=@i">@i</a>
            </li>
        }

        <li class="page-item @(current == total ? "disabled" : "")">
            <a class="page-link" href="?search=@ViewBag.Search&sort=@ViewBag.Sort&page=@(current+1)">Next</a>
        </li>
    </ul>
</nav>

<script>
    const searchInput = document.getElementById('searchInput');
    const sortSelect = document.getElementById('sortSelect');

    function navigateWithFilters(page = 1) {
        const params = new URLSearchParams();
        const s = searchInput.value;
        const sort = sortSelect.value;

        if (s) params.set('search', s);
        if (sort) params.set('sort', sort);
        params.set('page', page);

        window.location.search = params.toString();
    }

    searchInput.addEventListener('keyup', (e) => {
        if (e.key === 'Enter') navigateWithFilters(1);
    });

    sortSelect.addEventListener('change', () => navigateWithFilters(1));
</script>
