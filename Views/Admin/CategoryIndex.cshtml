@model List<Neksara.ViewModels.CategoryIndexVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="mb-3">Daftar Kategori</h4>

<!-- ================= SEARCH BAR SAKTI ================= -->
<div class="mb-3 d-flex flex-wrap gap-2 align-items-center">

    <!-- SEARCH -->
    <div class="col-12 col-md-5">
        <input type="text"
               id="searchInput"
               class="form-control"
               placeholder="ðŸ” Cari kategori..." />
    </div>

    <!-- SORT -->
    <select id="sortSelect" class="form-select w-auto">
        <option value="">Default</option>
        <option value="az">A - Z</option>
        <option value="za">Z - A</option>
        <option value="views">View Terbanyak</option>
        <option value="topics">Topik Terbanyak</option>
    </select>

    <a href="/Admin/CreateCategory"
       class="btn btn-success ms-auto">
        + Tambah Category
    </a>
</div>

<!-- ================= TABLE ================= -->
<table class="table table-bordered table-striped align-middle">
    <thead class="text-muted">
        <tr>
            <th>Kategori</th>
            <th>Topik</th>
            <th>Total Views</th>
            <th style="width:200px">Aksi</th>
        </tr>
    </thead>

    <tbody id="categoryTable">
@foreach (var c in Model)
{
        <tr class="category-row"
            data-name="@c.CategoryName.ToLower()"
            data-views="@c.TotalViews"
            data-topics="@c.TotalTopics">

            <td>@c.CategoryName</td>

            <td>
                <span class="badge bg-info">
                    @c.TotalTopics Topik
                </span>
            </td>

            <td>
                <span class="badge bg-warning text-dark">
                    @c.TotalViews Views
                </span>
            </td>

            <td class="d-flex gap-1">
                <a href="/Admin/CategoryDetail/@c.CategoryId"
                   class="btn btn-sm btn-primary">
                    Detail
                </a>

                <a href="/Admin/EditCategory/@c.CategoryId"
                   class="btn btn-sm btn-warning">
                    Edit
                </a>

                <form asp-controller="Admin"
                      asp-action="DeleteCategory"
                      asp-route-id="@c.CategoryId"
                      method="post"
                      class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-sm btn-danger"
                            onclick="return confirm('Yakin hapus kategori ini?')">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

<!-- ================= SCRIPT SEARCH & SORT ================= -->
<script>
    const searchInput = document.getElementById('searchInput');
    const sortSelect = document.getElementById('sortSelect');
    const tableBody = document.getElementById('categoryTable');

    function getRows() {
        return Array.from(document.querySelectorAll('.category-row'));
    }

    // SEARCH
    searchInput.addEventListener('keyup', () => {
        const keyword = searchInput.value.toLowerCase();

        getRows().forEach(row => {
            const name = row.dataset.name;
            row.style.display = name.includes(keyword) ? '' : 'none';
        });
    });

    // SORT
    sortSelect.addEventListener('change', () => {
        const rows = getRows();

        rows.sort((a, b) => {
            switch (sortSelect.value) {
                case 'az':
                    return a.dataset.name.localeCompare(b.dataset.name);
                case 'za':
                    return b.dataset.name.localeCompare(a.dataset.name);
                case 'views':
                    return b.dataset.views - a.dataset.views;
                case 'topics':
                    return b.dataset.topics - a.dataset.topics;
                default:
                    return 0;
            }
        });

        tableBody.innerHTML = '';
        rows.forEach(r => tableBody.appendChild(r));
    });
</script>
