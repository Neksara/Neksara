@model List<Topic>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="mb-3">Daftar Topik</h4>

<!-- ================= SEARCH BAR (RESPONSIVE) ================= -->
<div class="row mb-3 g-2 align-items-center search-bar">

    <!-- SEARCH -->
    <div class="col-12 col-md-5">
        <input type="text"
               id="searchInput"
               name="search"
               value="@ViewBag.Search"
               class="form-control"
               placeholder="ðŸ” Cari topik atau kategori..." />
    </div>

    <!-- FILTER KATEGORI -->
    <div class="col-12 col-md-3">
        <select id="categoryFilter" name="categoryId" class="form-select">
            <option value="" selected="@(ViewBag.CategoryId == null)">Semua Kategori</option>
            @foreach (var c in ViewBag.Categories)
            {
                <option value="@c.CategoryId" selected="@(ViewBag.CategoryId != null && (int)ViewBag.CategoryId == c.CategoryId)">
                    @c.CategoryName
                </option>
            }
        </select>
    </div>


    @* <div class="col-12 col-md-3">
        <select id="categoryFilter" name="category" class="form-select">
            <option value="">Semua Kategori</option>
            @foreach (var c in ViewBag.Categories)
            {
                <option value="@c.CategoryName" selected="@(ViewBag.SelectedCategoryId != null && ViewBag.SelectedCategoryId == c.CategoryId)">
                    @c.CategoryName
                </option>
            }
        </select>
    </div> *@

    <!-- SORT -->
    <div class="col-12 col-md-2">
        <select id="sortSelect" name="sort" class="form-select">
            <option value="">Default</option>
            @if (ViewBag.Sort == "az")
            {
                <option value="az" selected>A - Z</option>
            }
            else
            {
                <option value="az">A - Z</option>
            }
            @if (ViewBag.Sort == "za")
            {
                <option value="za" selected>Z - A</option>
            }
            else
            {
                <option value="za">Z - A</option>
            }
            @if (ViewBag.Sort == "views")
            {
                <option value="views" selected>View Terbanyak</option>
            }
            else
            {
                <option value="views">View Terbanyak</option>
            }
        </select>
    </div>

    <!-- BUTTON -->
    <div class="col-12 col-md-2 text-md-end">
        <a href="/Admin/CreateTopic" class="btn btn-success w-100">
            + Tambah Topik
        </a>
    </div>

</div>

<!-- ================= TABLE ================= -->
<table class="table table-bordered table-striped align-middle">
    <thead class="text-muted">
        <tr>
            <th>Topik</th>
            <th>Kategori</th>
            <th class="text-center">Views</th>
            <th>Tanggal Produksi</th>
            <th>Tanggal Update</th>
            <th>Tanggal Publish</th>
            <th>Status</th>
            <th style="width:210px">Aksi</th>
        </tr>
    </thead>

    <tbody id="topicTable">
    @foreach (var t in Model)
    {
        <tr class="topic-row"
            data-name="@t.TopicName"
            data-category="@t.Category?.CategoryName"
            data-views="@t.ViewCount">

            <td>@t.TopicName</td>

            <td>
                <span class="badge bg-secondary">
                    @t.Category?.CategoryName
                </span>
            </td>

            <td class="text-center">
                <span class="badge bg-info">
                    @t.ViewCount Views
                </span>
            </td>

            <td>@t.CreatedAt.ToString("dd MMM yyyy")</td>

            <td>
                @(t.UpdatedAt.HasValue
                    ? t.UpdatedAt.Value.ToString("dd MMM yyyy")
                    : "-")
            </td>

            <td>@(t.PublishedAt?.ToString("dd MMM yyyy") ?? "-")</td>

            <td>
                @if (t.PublishedAt.HasValue)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Not Active</span>
                }
            </td>

            <td class="d-flex gap-1">
                <a href="/Admin/TopicDetail/@t.TopicId"
                   class="btn btn-sm btn-primary">
                    Detail
                </a>

                <a href="/Admin/EditTopic/@t.TopicId"
                   class="btn btn-sm btn-warning">
                    Edit
                </a>

                <form asp-action="DeleteTopic"
                      asp-route-id="@t.TopicId"
                      method="post"
                      class="d-inline">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-sm btn-danger"
                            onclick="return confirm('Yakin hapus topik?')">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- ================= PAGINATION ================= -->
@{
    var current = (int?)(ViewBag.CurrentPage ?? 1) ?? 1;
    var total = (int?)(ViewBag.TotalPages ?? 1) ?? 1;
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(current == 1 ? "disabled" : "")">
            <a class="page-link" href="?search=@ViewBag.Search&sort=@ViewBag.Sort&categoryId=@ViewBag.CategoryId&page=@(current-1)">Previous</a>
        </li>

        @for (int i = 1; i <= total; i++)
        {
            <li class="page-item @(i == current ? "active" : "")">
                <a class="page-link" href="?search=@ViewBag.Search&sort=@ViewBag.Sort&categoryId=@ViewBag.CategoryId&page=@i">@i</a>
            </li>
        }

        <li class="page-item @(current == total ? "disabled" : "")">
            <a class="page-link" href="?search=@ViewBag.Search&sort=@ViewBag.Sort&categoryId=@ViewBag.CategoryId&page=@(current+1)">Next</a>
        </li>
    </ul>
</nav>

<!-- ================= SCRIPT: submit filters to server ================= -->
<script>
    const searchInput = document.getElementById('searchInput');
    const categoryFilter = document.getElementById('categoryFilter');
    const sortSelect = document.getElementById('sortSelect');

    function navigateWithFilters(page = 1) {
        const params = new URLSearchParams();
        const s = searchInput.value;
        const sort = sortSelect.value;
        const cat = categoryFilter.value;

        if (s) params.set('search', s);
        if (sort) params.set('sort', sort);
        if (cat) params.set('categoryId', cat);
        params.set('page', page);

        window.location.search = params.toString();
    }

    searchInput.addEventListener('keyup', (e) => {
        if (e.key === 'Enter') navigateWithFilters(1);
    });

    categoryFilter.addEventListener('change', () => navigateWithFilters(1));
    sortSelect.addEventListener('change', () => navigateWithFilters(1));
</script>
